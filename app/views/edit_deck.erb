<div class="container-fluid">
  <h3><%= @deck.title %></h3>
  <p>What would you like to do?</p>

  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>Card Title</th>
      <!-- <th>Link</th> -->
    </tr>
      <% @deck.cards.each do |card| %>
        <tr>
          <td><%= card.back %></td>
          <td class="narrow-cell"><a href="/cards/<%= card.id %>">Edit</a></td>
          <td class="narrow-cell"><form id='delete_form' action="/cards/delete" method="post">
            <input type='hidden' name='card_id' value='<%= card.id %>'> 
            <input type="submit" value='Delete' class="btn btn-danger btn-small">
          </form></td>
        </tr>
      <% end %>

    
  </table>

  <%= erb :_edit_card %>


  <form id='delete_form' action="/decks/delete" method="post">
    <input type='hidden' name='deck_id' value='<%= @deck.id %>'> 
    <input type="submit" value='Delete Entire Deck' class="btn btn-danger btn-large">
  </form>

</div>

