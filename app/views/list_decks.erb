<div class="container-fluid">
  <h1>Welcome to Awesome Flashcards!</h1>
  <p>What would you like to do?</p>

  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>Deck Title</th>
      <!-- <th>Link</th> -->
    </tr>
      <% @user.decks.each do |deck| %>
        <tr>
          <td><%= deck.title %></td>
          <td class="narrow-cell"><a href="/decks/<%= deck.id %>/play">Play!</a></td>
          <td class="super-narrow-cell"><a href="/decks/<%= deck.id %>" class="text-center"><i class="icon-edit"></i></a></td>
        </tr>
      <% end %>
    
  </table>
  <%= erb :_edit_deck_title %>
</div>
