<div class="container">
  <h1>Welcome to Awesome Flashcards!</h1>
  <p>What would you like to do?</p>

  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th>Deck Title</th>
      <!-- <th>Link</th> -->
    </tr>
      <% @user.decks.each do |deck| %>
        <tr>
          <td><%= deck.title %></td>
          <td><a href="/decks/<%= deck.id %>/play">Play!</a></td>
          <td><a href="/decks/<%= deck.id %>">Edit</a></td>
          <td><form id='delete_form' action="/decks/delete" method="post">
            <input type='hidden' name='deck_id' value='<%= deck.id %>'> 
            <input type="submit" value='Delete'>
          </form></td>
        </tr>
      <% end %>
    
  </table>
  <%= erb :_edit_deck_title %>
</div>
